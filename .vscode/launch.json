{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Crysis (32-bit, DX9)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "../Bin32/Crysis.exe",
			"args": ["-dx9", "-mod", "MyMod"],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Crysis (32-bit, DX10)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "../Bin32/Crysis.exe",
			"args": ["-dx10", "-mod", "MyMod"],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Crysis (64-bit, DX9)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "../Bin64/Crysis.exe",
			"args": ["-dx9", "-mod", "MyMod"],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Crysis (64-bit, DX10)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "../Bin64/Crysis.exe",
			"args": ["-dx10", "-mod", "MyMod"],
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Crysis Dedicated Server (32-bit)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "../Bin32/CrysisDedicatedServer.exe",
			"args": ["-mod", "MyMod"],
			"cwd": "${workspaceFolder}",
			"console": "newExternalWindow"
		},
		{
			"name": "Crysis Dedicated Server (64-bit)",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "../Bin64/CrysisDedicatedServer.exe",
			"args": ["-mod", "MyMod"],
			"cwd": "${workspaceFolder}",
			"console": "newExternalWindow"
		}
